<?xml version="1.0" encoding="UTF-8" ?>
<epsn>
  <simulation id="bar_traction">
    <data>
        <object class="mesh" id="bar">
          <variable id="connectivity" />
          <variable id="nodes"        />
	  <variable id="displacements"/>
	  <variable id="mass"         />
	  <variable id="velocity"     />
	  <variable id="force"        />
	  <variable id="acceleration" />
	  <variable id="strain"       />
	  <variable id="stress"       />
        </object>
    </data>

    <mht auto-start="false" >
        <data-context ref="bar" context="protected"/>
        <data-context ref="bar" variable-id="connectivity" context="readable"/>
        <data-context ref="bar" variable-id="nodes"        context="readable"/>
        <loop id="main">
            <task id="body">
	      <data-context ref="bar" context="readable"/>

	      <task id="predictor">
		<data-context ref="bar" variable-id="displacements" context="modified" />
		<data-context ref="bar" variable-id="velocity"      context="modified"/>
	      </task>

	      <task id="updateResidual">
		<data-context ref="bar" variable-id="force"  context="modified"/>
		<data-context ref="bar" variable-id="stress" context="modified"/>
		<data-context ref="bar" variable-id="strain" context="modified"/>
	      </task>

	      <task id="updateAcceleration">
		<data-context ref="bar" variable-id="acceleration" context="modified"/>
	      </task>

	      <task id="corrector">
		<data-context ref="bar" variable-id="displacements" context="modified" />
		<data-context ref="bar" variable-id="velocity"      context="modified"/>
	      </task>
            </task>
        </loop>
    </mht>
  </simulation>
</epsn>
