cmake_minimum_required(VERSION 3.1)

project(gtest-download NONE)

include(ExternalProject)

ExternalProject_Add(gtest
  PREFIX ${PROJECT_BINARY_DIR}/third-party
  GIT_REPOSITORY    ${GTEST_GIT}
  GIT_TAG           ${GTEST_VERSION}
  CMAKE_CACHE_ARGS -DCMAKE_INSTALL_PREFIX:PATH=<INSTALL_DIR> -DGTEST_CREATE_SHARED_LIBRARY:BOOL=ON
  DOWNLOAD_NO_PROGRESS 1
  UPDATE_DISCONNECTED 1
  USES_TERMINAL_INSTALL 0
  USES_TERMINAL_UPDATE 0
  )
